@page
@using Labmark.Domain.Modules.Sample.Infrastructure.Models.Dtos;
@using Labmark.Extensions;
@model Labmark.Pages.Report.IndexModel
@{
    Model._sampleDtos = Model._sampleDtos ?? new List<SampleDto>();
}
        
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <div class="container-fluid">
            <div class="d-sm-flex justify-content-between align-items-center mb-4">
                <h3 class="text-dark mb-4">Laudos</h3>
                <button class="btn btn-primary" data-bs-hover-animate="pulse" type="button" style="background-color: rgb(0,128,0);width: 120px;">Gerar</button>
            </div>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-xl-3 d-xl-flex justify-content-xl-start" style="margin-top: 10px;">
                            <div class="float-left float-md-right mt-5 mt-md-0 search-area" style="margin-left: 10px;"><i class="fas fa-search float-left search-icon"></i><input class="float-left float-sm-right custom-search-input" type="search" placeholder="Buscar cliente"></div>
                        </div>
                        <div class="col d-xl-flex justify-content-xl-start" style="margin-top: 10px;"><input class="border rounded" type="text" style="width: 100%;margin-left: 10px;padding-left: 10px;" readonly="" placeholder="Cliente"></div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <div class="card" style="width: 100%;height: 100%;">
                                        <div class="card-body d-xl-flex justify-content-xl-center" style="background-color: #f5f5f5;height: 72px;">
                                            <p style="font-size: 22px;">Amostra</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="shadow-sm" style="background-color: #ffffff;padding: 20px;height: 100%;">
                                @{

                                    foreach (var sample in Model._sampleDtos)
                                    {
                                        <div class="form-check"><input class="form-check-input d-xl-flex justify-content-xl-center" asp-for="_sampleDto" type="radio" id="formCheck-@sample.Id"><label class="form-check-label" for="formCheck-@sample-Id" style="font-size: 22px;">@sample.Id - @sample.Description</label></div>
                                        <hr>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <div class="card" style="width: 100%;height: 100%;">
                                        <div class="card-body d-xl-flex justify-content-xl-center" style="background-color: #f5f5f5;height: 72px;">
                                            <p style="font-size: 22px;">Ensaios</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="shadow-sm" style="background-color: #ffffff;padding: 20px;height: 100%;">
                                @{

                                    foreach (var assay in Model._sampleDto.Assays)
                                    {
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-check"><input class="form-check-input big-checkbox" type="checkbox" id="formCheck-@assay.Id" asp-for="@assay.Value"><label class="form-check-label text-left" for="formCheck-1" style="font-size: 15px;margin-right: 0px;margin-left: 5px;">@assay.Code &nbsp;- @assay.Code.GetDescription()<br></label></div>
                                        </div>
                                    </div>
                                    <hr>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>