@page
@model Labmark.Pages.Exam.SampleDilution.SecondStepModel
@{
}
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">

        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="border rounded p-5 rounded-100 shadow" style="background-color: #ffffff;">
                        <div class="text-center">
                            <h4 class="text-dark mb-4" style="margin-left: 0px;"><br>6.3 -&nbsp;Registro de Diluição<br></h4>
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Meio de cultura</th>
                                                    <th>Lote</th>
                                                    <th>Diluição</th>
                                                    <th>BOD</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var experiment in Model._experiments)
                                                {
                                                    <tr>
                                                        <td>@experiment.Middle</td>
                                                        <td>@experiment.Lot</td>
                                                        <td>@experiment.Dilution</td>
                                                        <td>@experiment.BOD</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-xl-2">
                                    <div class="row d-xl-flex justify-content-xl-center">
                                        <div style="width: 100%;height: 100%;">
                                            <a class="btn btn-primary btn-lg" role="button" data-toggle="modal" href="#myModal" style="background-color: #800040;width: 100%;height: 100%;"><em class="fa fa-plus"></em>Adicionar</a>
                                            <div class="modal fade"
                                                 role="dialog" tabindex="-1" id="myModal" style="margin-top: 30px;">
                                                <div class="modal-dialog" role="document">
                                                    <form method="post">
                                                    <div class="modal-content">
                                                        <div class="row" style="margin-top: 12px;">
                                                            <div class="col-xl-4" style="margin-top: 0px;"><label class="col-form-label" style="margin-top: 10px;">Meio de cultura</label></div>
                                                            <div class="col-xl-7"><input class="border rounded" type="text" style="margin-top: 10px;width: 100%;" asp-for="_experimentDto.Middle"></div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-xl-4"><label class="col-form-label">Lote</label></div>
                                                            <div class="col-xl-7"><input class="border rounded" type="text" style="width: 100%;" asp-for="_experimentDto.Lot"></div>
                                                        </div>
                                                        
                                                        <div class="row">
                                                            <div class="col-xl-4"><label class="col-form-label">BOD</label></div>
                                                            <div class="col-xl-7"><input class="border rounded" type="text" style="width: 100%;" asp-for="_experimentDto.BOD"></div>
                                                        </div>
                                                        <div class="modal-footer d-xl-flex justify-content-xl-end">
                                                            <button class="btn btn-light" type="button" data-dismiss="modal" style="background-color: rgb(207,0,0);color: rgb(255,255,255);">Fechar</button>
                                                            <button class="btn btn-primary" type="submit" style="background-color: rgb(0,128,0);">
                                                                Adicionar
                                                            </button>
                                                        </div>
                                                    </div>
                                                        </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row d-xl-flex justify-content-xl-center"><button class="btn btn-primary" type="button" style="background-color: rgb(9,128,0);margin-top: 37px;width: 100%;height: 100%;" ><a href="/Sample/Exam/?sampleDilutionId=@Model.sampleDilutionId" style="text-decoration:none;">Confirmar</a></button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>