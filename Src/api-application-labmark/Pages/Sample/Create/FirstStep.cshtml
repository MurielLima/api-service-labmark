@page
@using Labmark.Extensions;
@using Labmark.Domain.Modules.Solicitation.Infrastructure.Models.Dtos;
@using Labmark.Domain.Modules.Solicitation.Infrastructure.Models.Enums;
@using Labmark.Domain.Modules.Client.Infrastructure.Models.Dtos;
@model Labmark.Pages.Sample.Create.FirstStepModel
@{
    Model._solicitationDto = new SolicitationDto();
    Model._solicitationDto.AskDtos = new List<AskDto>();
    Model._solicitationDto.AskDtos.Add(new AskDto(EnumQuestion.Packaged));
    Model._solicitationDto.AskDtos.Add(new AskDto(EnumQuestion.Proccess));
    Model._solicitationDto.AskDtos.Add(new AskDto(EnumQuestion.Volume));
    Model._solicitationDto.AskDtos.Add(new AskDto(EnumQuestion.Temperature));
    Model._solicitationDto.AskDtos.Add(new AskDto(EnumQuestion.Transport));
}
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">

        <div class="container-fluid">
            <form method="post">
                <div class="row">
                    <div class="col">
                        <div class="border rounded p-5 rounded-100 shadow" style="background-color: #ffffff;">
                            <div class="text-center">
                                <h4 class="text-dark mb-4">Nova amostra</h4>
                            </div>
                            <div class="row" style="margin-top: 9px;">
                                <div class="col"></div>
                                <div class="col d-xl-flex justify-content-xl-end align-items-xl-center"><label class="col-form-label" style="font-size: 19px;">Cliente</label></div>
                                <div class="col d-xl-flex justify-content-xl-start align-items-xl-center">@Html.DropDownListFor(model => model._selectedClientId, new SelectList(Model._clientDtos, "Id", "Name"), "--- Cliente ---")</div>
                                <div class="col"></div>
                            </div>
                            <div class="row" style="margin-top: 9px;">
                                <div class="col"></div>
                                <div class="col d-xl-flex justify-content-xl-end align-items-xl-center"><label class="col-form-label" style="font-size: 19px;">Date de recebimento</label></div>
                                <div class="col d-xl-flex justify-content-xl-start align-items-xl-center"><input asp-for="_solicitationDto.ReceivingDate" type="date"  style="width:100%;"></div>
                                <div class="col"></div>
                            </div>
                           
                            @{
                                for (int i = 0; i < Model._solicitationDto.AskDtos.Count(); i++)
                                {
                                    <input type="hidden" asp-for="_solicitationDto.AskDtos[i].Code" />
                                    <div class="row text-center" style="margin-top: 10px;">
                                        <div class="col">
                                            <div class="row">
                                                <div class="col">
                                                    <hr>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col"><label class="col-form-label">@Model._solicitationDto.AskDtos[i].Code.GetDescription()</label></div>
                                            </div>
                                            <div class="row">
                                                <div class="col"></div>
                                                <div class="col" style="padding: 0px;padding-right: 0px;">
                                                    <div class="form-check"><input class="form-check-input" type="radio" id="formCheck-@Model._solicitationDto.AskDtos[i].Id" value="S" asp-for="_solicitationDto.AskDtos[i].Answer"><label class="form-check-label" for="formCheck-@Model._solicitationDto.AskDtos[i].Id">Sim</label></div>
                                                </div>
                                                <div class="col" style="padding: 0px;">
                                                    <div class="form-check"><input class="form-check-input" type="radio" id="formCheck-@Model._solicitationDto.AskDtos[i].Id" value="N" asp-for="_solicitationDto.AskDtos[i].Answer"><label class="form-check-label" for="formCheck-@Model._solicitationDto.AskDtos[i].Id">Não</label></div>
                                                </div>
                                                <div class="col"></div>
                                            </div>

                                        </div>
                                    </div>
                                }
                            }
                            <div class="row text-center" style="margin-top: 10px;">
                                <div class="col">
                                    <div class="row">
                                        <div class="col"><label class="col-form-label">Observações</label></div>
                                    </div>
                                    <div class="row">
                                        <div class="col"><textarea asp-for="_solicitationDto.Observation" style="width: 100%;height: 100%;"></textarea></div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <hr>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col"></div>
                                <div class="col d-xl-flex justify-content-xl-center align-items-xl-center"><button class="btn btn-primary btn-sm text-truncate shadow-none float-right tenant-continue-btn" data-bs-hover-animate="pulse" type="submit" style="background-color: #800040;">Continuar&nbsp;<i class="fas fa-greater-than continue-icon"></i></button></div>
                                <div class="col"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>