@page
@using Labmark.Extensions;
@using Labmark.Domain.Modules.Exam.Infrastructure.Models.Enums;
@using Labmark.Domain.Modules.Exam.Infrastructure.Models.Dtos;
@using Labmark.Domain.Modules.Sample.Infrastructure.Models.Dtos
@model Labmark.Pages.Test.ColifomsEscherichia.FirstStepModel
@{
    Model._colifomsEscherichia = new ColiformsEscherichiaDto();
    Model._colifomsEscherichia.dilutionColiformsEscherichiaDto = new List<DilutionColiformsEscherichiaDto>();
    Model._colifomsEscherichia.dilutionColiformsEscherichiaDto.Add(new DilutionColiformsEscherichiaDto(EnumReadings.FirstReading));
    Model._colifomsEscherichia.dilutionColiformsEscherichiaDto.Add(new DilutionColiformsEscherichiaDto(EnumReadings.SecondReading));


}
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <form method="post">
            <div class="container-fluid">
                <div class="row d-xl-flex justify-content-xl-center">
                    <div class="col-xl-1"></div>

                    <div class="col text-center">
                        <h4 class="text-dark mb-4" style="margin-left: 0px;">6.16 - Registro de Contagem e NMP de Coliformes Totais e Termotolerantes e Contagem de Escherichia coli<br></h4>
                    </div>
                     <div class="row" style="margin-bottom:10px;margin-top:0px;">
                          <label style="margin-left:110px;font-size: 18px;">Amostra:&nbsp;</label><input type="text" style="height:20px;width:400px;"readonly="" placeholder="N° @Model._sampleName"><label style="margin-left:15px;font-size: 18px;">Cliente:&nbsp;</label><input type="text" style="height:20px;width:290px;" readonly="" placeholder="@Model._sampleClient">          
                     </div>
                    <div class="col-xl-1"></div>
                </div>
                <div class="row">
                    <div class="col-xl-1"></div>

                    <div class="col">
                        <div class="border rounded shadow" style="background-color: #ffffff;padding: 20px;margin-top: 10px;height: 375px;width: 100%;">
                            <div class="row">
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50%;font-size: 22px;">Leitura</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @{

                                                        for (int i = 0; i < Model._colifomsEscherichia.dilutionColiformsEscherichiaDto.Count(); i++)
                                                        {
                                                                <tr> <td><input class="border rounded" type="text" style="width: 100%;margin-top: 50px;height: 42px;" placeholder="@Model._colifomsEscherichia.dilutionColiformsEscherichiaDto[i].Code.GetDescription()" asp-for="_colifomsEscherichia.dilutionColiformsEscherichiaDto[i].Leitura"></td></tr>
                                                        }
                                                    }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50%;font-size: 22px;">Diluição</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            @{

                                                for (int i = 0; i < Model._colifomsEscherichia.dilutionColiformsEscherichiaDto.Count(); i++)
                                                {
                                                    <tr> <td><input class="border rounded" type="text" style="width: 100%;margin-top: 50px;height: 42px;" placeholder="@Model._colifomsEscherichia.dilutionColiformsEscherichiaDto[i].Code.GetDescription().Replace("Leitura","Diluição")" asp-for="_colifomsEscherichia.dilutionColiformsEscherichiaDto[i].Diluicao"></td></tr>
                                                }
                                            }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="border rounded shadow" style="background-color: #ffffff;padding: 20px;margin-top: 10px;height: 375px;width: 100%;">
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        @Html.DropDownListFor(model => model._selectedAssayId, new SelectList(Model._assaysDto, "Id", "Code"), "--- Ensaio ---")
                                    </div>
                                    <div class="row">
                                        <div class="col"><label class="col-form-label" style="font-size: 20px;">Brilla *</label></div>
                                    </div>
                                    <div class="row">
                                        <div class="col"><input class="border rounded" type="text" style="width: 100%;" asp-for="_colifomsEscherichia.Brilla" required></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="col"><label class="col-form-label" style="font-size: 20px;">Estufa BOD *</label></div>
                                    </div>
                                    <div class="row">
                                        <div class="col"><input class="border rounded" type="text" style="width: 100%;" asp-for="_colifomsEscherichia.BOD" required></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="col"><label class="col-form-label" style="font-size: 20px;">Escherichia *<br></label></div>
                                    </div>
                                    <div class="row">
                                        <div class="col"><input class="border rounded" type="text" style="width: 100%;" asp-for="_colifomsEscherichia.Escherichia" required></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="row">
                                        <div class="col"><label class="col-form-label" style="font-size: 20px;">Banho Maria *<br></label></div>
                                    </div>
                                    <div class="row">
                                        <div class="col"><input class="border rounded" type="text" style="width: 100%;" asp-for="_colifomsEscherichia.WatherBath" required></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-1">
                        <div class="row">
                            <div class="col"><button class="btn btn-primary btn-sm text-truncate shadow-none float-right tenant-continue-btn none-desktop" data-bs-hover-animate="pulse" type="submit" style="background-color: rgb(0,128,0);margin-top: 10px;">Continuar&nbsp;<em class="fas fa-greater-than continue-icon"></em></button></div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col"><button class="btn btn-primary btn-sm text-truncate shadow-none float-right tenant-continue-btn none-cel" data-bs-hover-animate="pulse" type="submit" style="background-color:  rgb(0,128,0);width: 120px;margin-right:88px;margin-top:10px;">Continuar&nbsp;<em class="fas fa-greater-than continue-icon"></em></button></div>
                </div>
            </div>
        </form>
    </div>
</div>