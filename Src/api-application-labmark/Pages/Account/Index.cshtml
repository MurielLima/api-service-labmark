                                    <tr>
                                        <th>ID</th>
                                        <th>Editar</th>
                                        <th>Nome</th>
                                        <th style="width: 199px;">Email</th>
                                        <th style="width: 150px;">Telefone</th>
                                        <th style="width: 218px;">Endereço</th>
                                        <th>Cep</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        columns = [
            { "data": "name" },
            { "data": "mail" },
            { "data": "phone" },
            { "data": "street" },
            { "data": "cep" }
        ];
        table('dataTableEmployees', '/api/v1/Account/List/', '/Account/Edit', columns);
    });

</script>