@page
@model Labmark.Pages.Test.CountMBLB.IndexModel
@{
}
<div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <form method="post">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="text-center">
                            <h4 class="text-dark mb-4">6.7 -&nbsp; Registro de Contagem de Mesófilos, Fungos e Bact. Láticas</h4>
                        </div>
                        <div class="row text-center" style="margin-top: 10px;">
                            <div class="col-xl-4"></div>
                            <div class="col-xl-4 shadow-sm rounded" style="background-color: #ffffff;padding: 20px;">
                                <div class="row">
                                    <div class="col">
                                        <div>
                                            @Html.DropDownListFor(model => model._selectedAssayId, new SelectList(Model._assaysDto, "Id", "Code"), "--- Ensaio ---")
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xl-4 d-xl-flex justify-content-xl-start"><label class="col-form-label">Leitura</label></div>
                                    <div class="col d-xl-flex align-items-xl-center"><input class="border rounded" type="text" style="width: 100%;" asp-for="_contagemMBLB.Reading"></div>
                                </div>
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xl-4 d-xl-flex justify-content-xl-start"><label class="col-form-label">Diluição</label></div>
                                    <div class="col d-xl-flex align-items-xl-center"><input class="border rounded" type="text" style="width: 100%;" asp-for="_contagemMBLB.Dilution"></div>
                                </div>
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xl-4 d-xl-flex justify-content-xl-start"><label class="col-form-label">Resultado</label></div>
                                    <div class="col d-xl-flex align-items-xl-center"><input class="border rounded" type="text" style="width: 100%;" asp-for="_contagemMBLB.Result"></div>
                                </div>
                                <hr>
                                <div class="row d-xl-flex justify-content-xl-center" style="margin-top: 10px;">
                                    <div class="col-xl-6 d-xl-flex justify-content-xl-start"><button class="btn btn-primary btn-sm text-truncate shadow-none float-right tenant-continue-btn none-cel" data-bs-hover-animate="pulse" type="button" style="background-color: #800040;width: 120px;height: 100%;"><em class="fas fa-less-than continue-icon"></em>&nbsp;Voltar</button></div>
                                    <div class="col-xl-6 d-xl-flex justify-content-xl-end"><button class="btn btn-primary" type="submit" style="width: 120px;height: 100%;background-color: rgb(0,128,0);">Confirmar</button></div>
                                </div>
                            </div>
                            <div class="col-xl-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>